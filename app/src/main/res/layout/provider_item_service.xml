<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Service Title -->
        <TextView
            android:id="@+id/serviceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Service Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Service Category -->
        <TextView
            android:id="@+id/serviceCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/serviceTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Service Description -->
        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="@color/tertiaryTextColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/serviceCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Max Price -->
        <TextView
            android:id="@+id/serviceMaxPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Max Price: $0"
            android:textSize="16sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/serviceDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Min Price -->
        <TextView
            android:id="@+id/serviceMinPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Min Price: $0"
            android:textSize="16sp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/serviceMaxPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Edit Button -->
        <Button
            android:id="@+id/editButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColor"
            android:background="@drawable/rounded_button"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/serviceMinPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deleteButton" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:background="@drawable/rounded_button"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@id/serviceMinPrice"
        app:layout_constraintStart_toEndOf="@id/editButton"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
