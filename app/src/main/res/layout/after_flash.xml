<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Logo/Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/fixr"
        android:scaleType="fitCenter"
        android:layout_marginBottom="24dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Fixr - Your one-stop platform to browse services, book professionals, track arrival, and make secure payments."
        android:textAlignment="viewStart"
        android:justificationMode="inter_word"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:lineSpacingExtra="6dp"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="32dp" />


    <!-- Login Button -->
    <Button
        android:id="@+id/g_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg2"
        android:padding="14dp"
        android:text="Get Service"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/p_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg"
        android:padding="14dp"
        android:text="Provide Service"
        android:textColor="@color/white"
        android:textSize="18sp" />



</LinearLayout>
