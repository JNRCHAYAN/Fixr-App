<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F7F9FC"
    tools:context=".add_service">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Service Title -->
        <EditText
            android:id="@+id/editTextServiceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Title"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <!-- Image Upload -->
        <Button
            android:id="@+id/buttonUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Service Image"
            android:layout_marginBottom="12dp" />

        <!-- Price Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/editTextMinPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Min Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editTextMaxPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Max Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />
        </LinearLayout>

        <!-- Availability Time -->
        <Button
            android:id="@+id/buttonSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Available Time"
            android:layout_marginBottom="12dp" />

        <!-- Days of the Week -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Days:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox android:text="Mon" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Tue" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Wed" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Thu" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Fri" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Sat" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <CheckBox android:text="Sun" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Location -->
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Contact Info -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email (optional)"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Submit Buttons -->
        <Button
            android:id="@+id/buttonSaveDraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save as Draft"
            android:backgroundTint="#B0BEC5"
            android:textColor="#ffffff"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Service"
            android:backgroundTint="#2196F3"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
