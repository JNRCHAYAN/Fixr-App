<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Title -->
        <EditText
            android:id="@+id/editTextServiceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Title"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColorHint="#777"
            android:textColor="#000"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="12dp" />

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Description"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#777"
            android:textColor="#000"
            android:layout_marginBottom="12dp" />

        <!-- Price Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/editTextMinPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Min Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editTextMaxPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Max Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Time Button -->
        <Button
            android:id="@+id/buttonSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Available Time"
            android:textSize="16sp"
            android:backgroundTint="#0288D1"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Days Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Days"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- Day Checkboxes -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:layout_marginBottom="12dp">

            <CheckBox android:id="@+id/checkboxMonday" android:text="Mon" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxTuesday" android:text="Tue" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxWednesday" android:text="Wed" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxThursday" android:text="Thu" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxFriday" android:text="Fri" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxSaturday" android:text="Sat" style="@style/DayCheckBox"/>
            <CheckBox android:id="@+id/checkboxSunday" android:text="Sun" style="@style/DayCheckBox"/>
        </GridLayout>

        <!-- Location -->
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="12dp" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="20dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Service"
            android:textSize="16sp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#009688"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
