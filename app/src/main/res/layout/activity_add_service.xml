<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Service Title -->
        <EditText
            android:id="@+id/editTextServiceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Service Title"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Category -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Price Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/editTextMinPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Min Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editTextMaxPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Max Price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Availability Time -->
        <Button
            android:id="@+id/buttonSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Available Time"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Days Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Days:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="7">

            <CheckBox android:id="@+id/checkboxMonday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Mon" />
            <CheckBox android:id="@+id/checkboxTuesday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Tue" />
            <CheckBox android:id="@+id/checkboxWednesday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Wed" />
            <CheckBox android:id="@+id/checkboxThursday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Thu" />
            <CheckBox android:id="@+id/checkboxFriday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Fri" />
            <CheckBox android:id="@+id/checkboxSaturday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Sat" />
            <CheckBox android:id="@+id/checkboxSunday" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Sun" />
        </LinearLayout>

        <!-- Location -->
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Contact Info -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Submit -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Service"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
