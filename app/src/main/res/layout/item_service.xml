<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvTitle" android:textStyle="bold"
            android:textSize="18sp" android:textColor="#000"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvCategory"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvPrice"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvLocation"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/tvDays"
            android:layout_width="match_parent" android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
