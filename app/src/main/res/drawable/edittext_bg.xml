<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#F5F5F5"/> <!-- Light gray color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp"/> <!-- Adjust the radius for the curve -->

    <!-- Optional: Add a border color (optional) -->
    <stroke android:color="#DDDDDD" android:width="1dp"/> <!-- Light gray border color -->

    <!-- Padding inside the EditText -->
    <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
</shape>
